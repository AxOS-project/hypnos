{
    "enabled": true,
    "rules": [
        {
            "timeout": 5,
            "actions": "brightnessctl -s set 10",
            "restore": "brightnessctl -r",
            "on_battery": true,
            "enabled": true
        },
        {
            "timeout": 120,
            "actions": "loginctl lock-session"
        },
        {
            "timeout": 300,
            "actions": "systemctl suspend"
        }
    ]
}